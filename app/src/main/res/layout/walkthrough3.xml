<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_walkthrough2">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_logo"
        android:contentDescription="App Logo"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mulai Sekarang!"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_below="@id/image_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini juga membantu Anda memulai perjalanan dalam mengelola dan meningkatkan aktivitas harian Anda. Jangan tunggu lagi, mulai sekarang!"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/text_title"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button_finish"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Mulai"
        android:textSize="18sp"
        android:textColor="@android:color/white" />
</RelativeLayout>
